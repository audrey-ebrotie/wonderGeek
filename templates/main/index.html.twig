{% extends 'base.html.twig' %}

{% block title %}
    WonderGeek le site référence de la PopCulture 
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main/index.css') }}">
{% endblock %}

{% block mainClasses %}no-spaces{% endblock %}

{% block body %}
    <div class="container-fluid px-3">
        <div class="landing row">
            <div class="landing-content col py-5">
                <h1>Bienvenue sur WonderGeek</h1>
                <h2>Le site référence de la PopCulture</h2>
                <a href="{{ path('event_list') }}" class="button">
                    Voir nos événements
                </a>
            </div>
            <div class="text-center col">
                <h2 class="text-light py-5"> A la une </h2>
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img src={{ asset('img/dota2.jpg') }} class="d-block w-100" alt="évènements">
                        </div>
                        <div class="carousel-item">
                        <img src={{ asset('img/magic.jpg') }} class="d-block w-100" alt="évènements">
                        </div>
                        <div class="carousel-item">
                        <img src={{ asset('img/lol.jpg') }} class="d-block w-100" alt="évènements">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>

        <h3 class="text-light py-4"> Evenements qui pourraient vous plaire </h3>

        
        <div class="row row-cols-xl-4 row-cols-md-2 landing-option">
            {% for event in events|slice(0, 4) %}
                <div class="col my-3">
                    <div class="card h-100 w-80">
                        <img src={{ event.picture }} class="card-img-top" alt="{{event.name}}">
                        <div class="card-body bg-dark">
                            <h4 class="card-title text-light">{{event.name}}</h4>
                            <div class="row d-flex flex-row">
                                <h5 class="text-light">{{event.description|slice(0, 150)}}</h5>
                                <div class="row icone pt-3">
                                    <div class="col-6 d-flex flex-row align-items-center">
                                        
                                    <p class="card-text text-light px-3">{{event.category.name}}
                                    
                                    {% if event.category.name == "Convention" or event.category.name == "Meeting" %}
                                    <i class="fas fa-users"></i>

                                    {% elseif event.category.name == "Vente aux enchères / troc" %}
                                    <i class="fas fa-gavel"></i>

                                    {% elseif event.category.name == "Conférence" %}
                                    <i class="fas fa-bullhorn"></i>

                                    {% else %}
                                    <i class="fas fa-gamepad"></i>

                                    {% endif %} 
                                    </p>
                                    </div>
                                    <div class="col-6 d-flex flex-row align-items-center">
                                        <p class="text-light mb-0 px-3"> 
                                            <i class="far fa-calendar-check"></i> 
                                            Début : {{event.startat|date('d/m/Y h:i')}} <br><br>
                                        
                                            <i class="far fa-calendar-times"></i>
                                            Fin estimée : {{event.endat|date('d/m/Y h:i')}} </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    
{% endblock %}