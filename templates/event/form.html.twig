{% extends 'base.html.twig' %}

{% block title %} Créer un évènement - {{ parent() }} {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/event/style.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-6">

                <h2 class="text-light py-3">Créer un évenement </h2>
                {{ form(form) }}
                <form>
                    <div class="form-row">
                        <div class="col-6 my-2">
                            <label for="event_name" hidden>Nom de l'évenement</label>
                            <input type="text" id="event_name" class="form-control" placeholder="Nom de l'évenement" required aria-label="Nom de l'évenement">
                        </div>
                        <div class="col-6 my-2">
                            <label for="validationDefault02"></label>
                            <input type="text" class="form-control" id="validationDefault02" placeholder="Catégorie de l'évenement" required>
                        </div>
                        <div class="col-6 my-2">
                            <label class="text-light" for="meeting-time">Choisissez votre date de début:</label>
                            <input type="datetime-local" id="meeting-time"
                            name="start_date" value="2022-01-07T19:30"
                            min="2022-01-07T00:00" max="2030-12-14T00:00">
                        </div>
                        <div class="col-6 my-2">
                            <label class="text-light" for="meeting-time">Choisissez votre date de fin:</label>
                            <input type="datetime-local" id="meeting-time"
                            name="end_date" value="2022-01-07T19:30"
                            min="2022-01-07T00:00" max="2030-12-14T00:00">
                        </div>
                    </div>
                    <div class="col-8 py-2">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1" class="text-center text-light">Nom du jeu</label>
                            <select class="form-select form-select text-center" id="exampleFormControlSelect1">
                                <option selected>NOM</option>
                                <option value="Dota2">Dota2</option>
                                <option value="LOL">League of Legends</option>
                                <option value="Smite">Smite</option>
                                <option value="Dota">Dota</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-8 py-2">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1" class="text-center text-light">Niveau de jeu</label>
                            <select class="form-select form-select text-center" id="exampleFormControlSelect1">
                                <option selected>NIVEAU</option>
                                <option value="Tout">Tout niveau</option>
                                <option value="Débutant">Débutant</option>
                                <option value="Intermédiaire">Intermédiaire</option>
                                <option value="Confirmé">Confirmé</option>
                                <option value="Expert">Expert</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-8 py-3">
                        <label for="validationDefault05" hidden>Nombre de joueurs</label>
                        <input type="text" class="form-control" id="validationDefault05" placeholder="Nombre de joueurs" required>
                    </div>
                    <div class="col-8 py-3">
                        <label for="validationDefault05" hidden>Langue</label>
                        <input type="text" class="form-control" id="validationDefault05" placeholder="Langue" required>
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary mt-3" type="submit" aria-label="Créer l'évenement">Créer l'évènement !</button>
                </div>
            </div>

            <div class="col col-lg-4 pt-3">
                <h2 class="text-light py-3 text-center">Rejoindre un évènement </h2>
                <div class="row">
                    <div class="col">
                        <div class="card bg-dark">
                            <div class="card-body text-light text-center">
                                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                        <img src={{ asset('img/dota2.jpg') }} class="d-block w-100" alt="évènements">
                                        </div>
                                        <div class="carousel-item">
                                        <img src={{ asset('img/magic.jpg') }} class="d-block w-100" alt="évènements">
                                        </div>
                                        <div class="carousel-item">
                                        <img src={{ asset('img/lol.jpg') }} class="d-block w-100" alt="évènements">
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <a href="#" class="btn btn-primary mt-3">Rechercher un évènement</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
        