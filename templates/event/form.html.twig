{% extends 'base.html.twig' %}

{% block title %} Créer un évènement - {{ parent() }} {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/event/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/component/form.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-6">

                <h2 class="text-light py-3">Créer un évenement </h2>
                {{form_start(form)}}
                    <div class="form-row">
                        <div class="col-6 my-2">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.picture) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.place) }}<br>
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.gameLevel) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.startAt) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.endAt) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.capacity) }}
                        </div>
                        <div class="col-6 my-2">
                            {{ form_row(form.submit) }}
                        </div>
                        <div class="form-end">
                        {{ form_end(form) }}
                        </div>
                    </div>
    </div>

{% endblock %}
        