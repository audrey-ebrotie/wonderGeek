{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/app.css') }}">
<link rel="stylesheet" href="{{ asset('css/component/form.css') }}">
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 text-center">Identifiants de connexion</h1>
    <div class="container">
        <div class="row py-2 text-center">
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="row py-2 text-center">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        
        <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}">
        
        <div class="py-3 text-center">
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </div>
    </div>
</form>
{% endblock %}
