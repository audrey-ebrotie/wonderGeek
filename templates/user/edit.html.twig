{% extends 'base.html.twig' %}

{% block title %}Modifier ton profil - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('css/component/form.css') }}">
{% endblock %}

{% block body %}
    <h1 class="text-center py-4">Inscription</h1>

    {{ form_start(form) }}

    <div class="row text-center">
        <div class="col col-md-6 offset-md-3">
            <div class="form-group py-2 my-2">
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}                
                {{ form_help(form.username) }}
            </div>

            <div class="form-group py-2 my-2">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}               
                {{ form_help(form.email) }}
            </div>

            <div class="form-group py-2 my-2">
                {{ form_label(form.plainPassword) }}
                {{ form_widget(form.plainPassword) }}              
                {{ form_help(form.plainPassword) }}
            </div>

            <div class="form-group py-2 my-2">
                {{ form_label(form.birthdate) }}
                {{ form_widget(form.birthdate) }}               
                {{ form_help(form.birthdate) }}
            </div>

            <div class="py-2">
                {{ form_label(form.city) }}
                {{ form_widget(form.city) }}               
                {{ form_help(form.city) }}
            </div>

            <div class="form-group py-2 my-2">
                {{ form_label(form.profile) }}
                {{ form_widget(form.profile) }}                
                {{ form_help(form.profile) }}
            </div>

            <div class="form-group py-2 my-2">
                {{ form_label(form.level) }}
                {{ form_widget(form.level) }}
                {{ form_help(form.level) }}
            </div>

            <div class="form-group py-2 my-2">
                {{ form_label(form.pictureFile) }}
                {{ form_widget(form.pictureFile) }}                
                {{ form_help(form.pictureFile) }}
            </div>
        </div>
    </div>

    <div class="form-end my-2">
        {{ form_row(form.submit) }}
    </div>

    {{ form_end(form) }}

{% endblock %}
