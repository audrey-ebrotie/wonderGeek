        <script src="{{ asset('js/app.js') }}" defer></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        {% include "components/header.html.twig" %}

        <main class="{% block mainClasses %}{% endblock %}">
            {% block body %}{% endblock %}
        </main>

        {% include "components/footer.html.twig" %}

    </body>
</html>
